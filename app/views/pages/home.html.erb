<div class="container">
  <input type="text" id="datepicker" data-provide='datepicker' >
  <div class="input-group input-daterange">
    <input type="text" class="form-control" value="2012-04-05">
    <div class="input-group-addon">to</div>
    <input type="text" class="form-control" value="2012-04-19">
  </div>

  <h1>Listings</h1>
  <p>Find me in app/views/pages/home.html.erb</p>
  <%= link_to "New Listing", new_listing_path, class:"btn btn-primary btn-lg active" %>
  <h3>Available properties: </h3>
  <ul class="list-group">
    <% @listings.each do |listing| %>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <%= link_to listing.name, listing_path(listing) %>
      <span class="badge badge-primary badge-pill">xx</span>
    </li>
  </ul>
  <% end %>
</div>