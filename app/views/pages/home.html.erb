<div class="container">
  <h1>Listings</h1>
  <p>Find me in app/views/pages/home.html.erb</p>
  <% if policy(Listing).create? %>
    <%= link_to "New Listing", new_listing_path, class:"btn btn-primary btn-lg active" %>
  <% end %>
  
  <h3>Available properties: </h3>
  <ul class="list-group">
    <% @listings.each do |listing| %>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <%= link_to listing.name, listing_path(listing) %>
      <span class="badge badge-primary badge-pill"><%= humanized_money_with_symbol(listing.rate_cents) %></span>
    </li>
  </ul>
  <% end %>
</div>